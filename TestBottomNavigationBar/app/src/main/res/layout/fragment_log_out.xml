<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_dark">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_log_out_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_log_out_log_out"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:height="40dp"
        android:background="@drawable/save_button_background"
        android:gravity="center"
        android:text="Выйти"
        android:textAppearance="@style/Style16sp"
        android:textColor="@color/default_light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_log_out_toolbar" />

    <TextView
        android:id="@+id/fragment_log_out_delete"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:height="40dp"
        android:background="@drawable/delete_button_background"
        android:gravity="center"
        android:text="Удалить аккаунт"
        android:textAppearance="@style/Style16sp"
        android:textColor="@color/default_light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_log_out_log_out" />

</androidx.constraintlayout.widget.ConstraintLayout>