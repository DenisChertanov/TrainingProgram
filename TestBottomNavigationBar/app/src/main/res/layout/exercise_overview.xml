<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/exercise_overview_background"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/exercise_title_textview"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingStart="16dp"
        android:paddingTop="17dp"
        android:paddingEnd="7dp"
        android:textAppearance="@style/ExerciseTitleSearchButton"
        android:textColor="@color/default_light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/exercise_title_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>