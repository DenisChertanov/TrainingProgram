<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/set_constraintlayout_background"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/set_info_setnumber"
        android:layout_width="32dp"
        android:layout_height="89dp"
        android:background="@drawable/set_number_background"
        android:gravity="center"
        android:textAppearance="@style/AddSetStyle"
        android:textColor="@color/default_light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/set_info_weight_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_weight"
        app:layout_constraintStart_toEndOf="@id/set_info_setnumber"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/set_info_count_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_countdown"
        app:layout_constraintStart_toEndOf="@id/set_info_weight_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/set_info_timer_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_timer"
        app:layout_constraintStart_toEndOf="@id/set_info_count_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/set_info_compete_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/set_complete_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/set_info_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AddSetStyle"
        android:textColor="@color/default_light_grey"
        app:layout_constraintTop_toBottomOf="@id/set_info_weight_image"
        app:layout_constraintStart_toEndOf="@id/set_info_setnumber"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/set_info_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AddSetStyle"
        android:textColor="@color/default_light_grey"
        app:layout_constraintTop_toBottomOf="@id/set_info_count_image"
        app:layout_constraintStart_toEndOf="@id/set_info_weight"
        android:layout_marginStart="33dp"
        android:layout_marginTop="13dp"/>

    <TextView
        android:id="@+id/set_info_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AddSetStyle"
        android:textColor="@color/default_light_grey"
        app:layout_constraintTop_toBottomOf="@id/set_info_timer_image"
        app:layout_constraintStart_toEndOf="@id/set_info_count"
        android:layout_marginStart="33dp"
        android:layout_marginTop="13dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>