<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_dark"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/login_layout_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="Логин:"
        android:textAppearance="@style/Style16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_layout_login_et"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:autofillHints=""
        android:background="@drawable/search_edittext_background"
        android:hint="логин"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="5dp"
        android:textAppearance="@style/EditTextStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_layout_login_tv" />

    <TextView
        android:id="@+id/login_layout_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Пароль:"
        android:textAppearance="@style/Style16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_layout_login_et" />

    <EditText
        android:id="@+id/login_layout_password_et"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:autofillHints=""
        android:background="@drawable/search_edittext_background"
        android:hint="пароль"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="5dp"
        android:textAppearance="@style/EditTextStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_layout_password_tv" />

    <TextView
        android:id="@+id/login_layout_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/exercise_overview_background"
        android:gravity="center"
        android:text="Войти"
        android:textAppearance="@style/Style16sp"
        android:textColor="@color/default_light_grey"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_layout_password_et" />

    <TextView
        android:id="@+id/login_layout_sign_up"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/exercise_overview_background"
        android:gravity="center"
        android:text="Зарегистрироватсья"
        android:textAppearance="@style/Style16sp"
        android:textColor="@color/default_light_grey"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_layout_login" />

</androidx.constraintlayout.widget.ConstraintLayout>