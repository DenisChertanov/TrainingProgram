<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_dark">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_account_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/tool_bar"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragment_account_logout_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_toolbar" />

    <ImageView
        android:id="@+id/fragment_account_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_add25"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_toolbar" />

    <ImageView
        android:id="@+id/fragment_account_remove_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_minus"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_account_main_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="42dp"
        android:visibility="gone"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_toolbar">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/main_account_photo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fragment_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:textAppearance="@style/Style20sp"
        android:textColor="@color/default_light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_toolbar" />

    <TextView
        android:id="@+id/fragment_account_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/Style16sp"
        android:textColor="@color/account_username_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_name" />

    <TextView
        android:id="@+id/fragment_account_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/account_edit_background"
        android:gravity="center"
        android:text="@string/edit"
        android:textAppearance="@style/Style14sp"
        android:textColor="@color/default_light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_username" />

    <TextView
        android:id="@+id/fragment_account_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/Style14sp"
        android:textColor="@color/default_light_grey"
        app:layout_constraintStart_toEndOf="@id/frgament_account_age_icon"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_edit" />

    <TextView
        android:id="@+id/fragmnet_account_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="37dp"
        android:textAppearance="@style/Style14sp"
        android:textColor="@color/default_light_grey"
        app:layout_constraintStart_toEndOf="@id/fragment_account_percent_image"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_age" />

    <TextView
        android:id="@+id/fragment_account_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/Style14sp"
        android:textColor="@color/default_light_grey"
        app:layout_constraintStart_toEndOf="@id/fragment_account_height_icon"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_edit" />

    <TextView
        android:id="@+id/fragment_account_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="37dp"
        android:textAppearance="@style/Style14sp"
        android:textColor="@color/default_light_grey"
        app:layout_constraintStart_toEndOf="@id/fragmnet_account_weight_icon"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_height" />

    <ImageView
        android:id="@+id/frgament_account_age_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_edit" />

    <ImageView
        android:id="@+id/fragment_account_percent_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frgament_account_age_icon" />

    <ImageView
        android:id="@+id/fragment_account_height_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_height"
        app:layout_constraintStart_toEndOf="@id/frgament_account_age_icon"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_edit" />

    <ImageView
        android:id="@+id/fragmnet_account_weight_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_weight30"
        app:layout_constraintStart_toEndOf="@id/fragment_account_percent_image"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_height_icon" />

    <TextView
        android:id="@+id/fragment_account_friend_top_stroke"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/account_stroke_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_percent_image" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_account_friends_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_friend_top_stroke">

        <TextView
            android:id="@+id/fragment_account_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="21dp"
            android:text="@string/friends"
            android:textAppearance="@style/Style18sp"
            android:textColor="@color/default_light_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_account_friends_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="21dp"
            android:textAppearance="@style/Style18sp"
            android:textColor="@color/count_color"
            app:layout_constraintStart_toEndOf="@id/fragment_account_friends"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:src="@drawable/ic_next15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/fragment_account_trainings_top_stroke"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/account_stroke_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_friends_cl" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_account_training_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_trainings_top_stroke">

        <TextView
            android:id="@+id/fragment_account_trainings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="21dp"
            android:text="@string/training"
            android:textAppearance="@style/Style18sp"
            android:textColor="@color/default_light_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_account_trainings_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="21dp"
            android:text="5"
            android:textAppearance="@style/Style18sp"
            android:textColor="@color/count_color"
            app:layout_constraintStart_toEndOf="@id/fragment_account_trainings"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:src="@drawable/ic_next15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/fragment_account_trainings_bottom_stroke"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/account_stroke_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_account_training_constraintlayout" />

</androidx.constraintlayout.widget.ConstraintLayout>